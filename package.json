	"author": "Erick Germani",
	"license": "ISC",
	"dependencies": {
		"express": "^4.18.2"
	},
	"devDependencies": {
		"eslint": "^8.40.0",
		"eslint-plugin-node": "^11.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"prettier": "2.8.8"
	},
	"lint-staged": {
		"src/**/*.(js|scss)": "prettier --write --ignore-unknown",
		"src/**/*.js": "eslint --fix"
