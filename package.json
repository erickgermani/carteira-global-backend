		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"prettier": "2.8.8",
		"supertest": "^6.3.3"
	},
	"lint-staged": {
		"(src|test)/**/*.(js|scss)": "prettier --write --ignore-unknown",
