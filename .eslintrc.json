{
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:node/recommended"
	],
	"plugins": [
		"node"
	],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": "warn",
		"node/no-unsupported-features/es-syntax": "off",
		"node/no-unpublished-require": [
			"error",
			{
				"allowModules": [
					"supertest"
				]
			}
		]
	}
}
